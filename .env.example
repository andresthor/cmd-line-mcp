# Command-Line MCP Configuration

# Server Settings
CMD_LINE_MCP_SERVER_NAME=cmd-line-mcp
CMD_LINE_MCP_SERVER_VERSION=0.2.0
CMD_LINE_MCP_SERVER_LOG_LEVEL=INFO

# Security Settings
CMD_LINE_MCP_SECURITY_SESSION_TIMEOUT=3600
CMD_LINE_MCP_SECURITY_MAX_OUTPUT_SIZE=102400
CMD_LINE_MCP_SECURITY_ALLOW_USER_CONFIRMATION=true
CMD_LINE_MCP_SECURITY_REQUIRE_SESSION_ID=false
CMD_LINE_MCP_SECURITY_ALLOW_COMMAND_SEPARATORS=true

# Output Settings
CMD_LINE_MCP_OUTPUT_MAX_SIZE=102400
CMD_LINE_MCP_OUTPUT_FORMAT=text

# Command Lists - Read Commands
CMD_LINE_MCP_COMMANDS_READ=ls,pwd,cat,less,head,tail,grep,find,which,du,df,file,uname,hostname,uptime,date,whoami,id,env,history,man,info,help,sort

# Command Lists - Write Commands
CMD_LINE_MCP_COMMANDS_WRITE=cp,mv,rm,mkdir,rmdir,touch,chmod,chown,ln,echo,printf,export,tar,gzip,zip,unzip

# Command Lists - System Commands
CMD_LINE_MCP_COMMANDS_SYSTEM=ps,top,htop,who,netstat,ifconfig,ping,ssh,scp,curl,wget

# Command Lists - Blocked Commands
CMD_LINE_MCP_COMMANDS_BLOCKED=sudo,su,bash,sh,zsh,ksh,csh,fish,screen,tmux,nc,telnet,nmap,dd,mkfs,mount,umount,shutdown,reboot,passwd,chpasswd,useradd,userdel,groupadd,groupdel,eval,exec,source,.

# Dangerous Patterns 
CMD_LINE_MCP_DANGEROUS_PATTERNS=rm\s+-rf\s+/,>\s+/dev/(sd|hd|nvme|xvd),>\s+/dev/null,>\s+/etc/,>\s+/boot/,>\s+/bin/,>\s+/sbin/,>\s+/usr/bin/,>\s+/usr/sbin/,>\s+/usr/local/bin/,2>&1,\$\(,\$\{\w+\},`
